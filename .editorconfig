# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Configuration files
[*.{ini,cfg}]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Jupyter notebooks (preserve as-is)
[*.ipynb]
insert_final_newline = false
trim_trailing_whitespace = false

# Makefile (must use tabs)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Web files
[*.{html,css,js,ts}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Requirements files
[requirements*.txt]
indent_size = 4

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Pre-commit config
[.pre-commit-config.yaml]
indent_size = 2

# Documentation
[docs/**/*.{rst,md}]
max_line_length = 80